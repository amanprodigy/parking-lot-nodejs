{
  "compilerOptions": {
    "lib": ["es2017", "es2016", "es2015"],
    "sourceMap": true,
    "sourceRoot": "/",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "outDir": "build",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@app/*": ["src/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "build/**/*"],
  "include": ["src/**/*"]
}
